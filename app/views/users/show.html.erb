<% provide(:title, @user.name) %>
<div class="row">
   <aside class="span4">
     <section> 
        <h1>
          <%= gravatar_for @user, size: 52 %>
          <%= @user.name %>
       </h1>
      </section>
  </aside>
  <div class="span8">
     <% if @user.microposts.any? %>
      <h3> Microposts (<%= @user.microposts.count %>)</h3>
       <ol class="microposts">
          <%= render @microposts %>
       </ol>
        <%= will_paginate @microposts %>
      <% else %>
       <h5> Lets start Talking by writing a <%= link_to "new post", root_path %>. </h5>
      <% end %>
   </div>
</div>
